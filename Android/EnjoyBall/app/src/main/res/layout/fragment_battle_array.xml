<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#000000"
            android:textSize="20dp"
            android:id="@+id/tv_battleArray_badminton_address"
            android:text="撒哈拉大沙漠"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_battleArray_badminton_weather"
            android:text="特大暴雨加冰雹"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#000000"
            android:textSize="18dp"
            android:id="@+id/tv_battleArray_badminton_temperature"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_battleArray_badminton_weather"
            android:text="-27℃ — -18℃"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ListView
        android:id="@+id/lv_contestDetail_battle_array"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>