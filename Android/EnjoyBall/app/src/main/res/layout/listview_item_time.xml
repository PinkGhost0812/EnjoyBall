<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_time_time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Time:"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="2019/11/8      14:00"
            android:layout_marginLeft="70dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_time_time"
            android:textSize="20sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_time_place"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Place:"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="河北师范大学篮球场"
            android:layout_marginLeft="70dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_time_place"
            android:textSize="20sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_time_team"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="team:"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="巴塞罗那"
            android:layout_marginLeft="70dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_time_team"
            android:textSize="20sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_time_dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="description："
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="缺少2名队友，求躺"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_time_dp"
            android:textSize="20sp"/>
    </RelativeLayout>
</LinearLayout>