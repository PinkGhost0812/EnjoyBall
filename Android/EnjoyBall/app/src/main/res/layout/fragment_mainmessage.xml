<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!--选择消息类型-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_weight="2">
        <!--通知消息-->
        <LinearLayout
            android:gravity="left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/ll_mainmessage_notification"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/message_notification"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/tv_mainMessage_notify"
                android:textSize="20dp"
                android:text="通知消息"/>

        </LinearLayout>
        <!--管理消息-->
        <LinearLayout
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/ll_mainmessage_manage"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/message_manager"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/tv_mainMessage_manager"
                android:textSize="20dp"
                android:text="管理消息"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>