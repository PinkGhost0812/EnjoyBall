<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants">
    <LinearLayout
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_shopping_img"
            android:scaleType="fitXY"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:src="@drawable/changename"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_shopping_name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="改名卡"
                android:gravity="center"
                android:textSize="24sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="bottom">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_shopping_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="积分："
                            android:textSize="15sp"/>
                        <TextView
                            android:id="@+id/tv_shopping_score"
                            android:layout_toRightOf="@+id/tv_shopping_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1000"
                            android:textSize="15sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">
                        <Button
                            android:id="@+id/btn_shopping_delete"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="-"
                            android:background="@drawable/border"/>
                        <TextView
                            android:id="@+id/tv_shopping_num"
                            android:layout_toRightOf="@id/btn_shopping_delete"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:gravity="center_horizontal"
                            android:background="@drawable/border"/>
                        <Button
                            android:id="@+id/btn_shopping_add"
                            android:layout_toRightOf="@id/tv_shopping_num"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/border"
                            android:text="+"/>
                    </RelativeLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/btn_shopping_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:text="购买"
                    android:textSize="14sp"
                    android:background="@drawable/shapebutton_login"
                    android:textColor="#ffffff"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>