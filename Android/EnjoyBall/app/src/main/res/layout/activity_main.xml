<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#1afa29"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_main_portrait"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/my" />

            <EditText
                android:id="@+id/et_main_search"
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/et_main_white"
                android:gravity="center"
                android:hint="国际足球"
                android:textSize="16sp"  />

            <ImageView
                android:id="@+id/iv_serch"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:src="@drawable/serch" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- 选项卡按钮所在布局 -->

            <LinearLayout
                android:id="@+id/tab_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <!-- 全部 -->
                <LinearLayout
                    android:id="@+id/tab_spec_main_topall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_main_topall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="全部"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/img_main_topall"
                        android:layout_width="30dp"
                        android:layout_height="6dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

                <!-- 足球 -->
                <LinearLayout
                    android:id="@+id/tab_spec_main_football"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_main_football"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:text="足球" />

                    <ImageView
                        android:id="@+id/img_main_football"
                        android:layout_width="30dp"
                        android:layout_height="6dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp" />

                </LinearLayout>

                <!-- 篮球 -->
                <LinearLayout
                    android:id="@+id/tab_spec_main_basketball"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_main_basketball"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:text="篮球" />

                    <ImageView
                        android:id="@+id/img_main_basketball"
                        android:layout_width="30dp"
                        android:layout_height="6dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp" />

                </LinearLayout>

                <!-- 羽毛球 -->
                <LinearLayout
                    android:id="@+id/tab_spec_main_badminton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_main_badminton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:text="羽毛球" />

                    <ImageView
                        android:id="@+id/img_main_badminton"
                        android:layout_width="30dp"
                        android:layout_height="6dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp" />

                </LinearLayout>
                <!-- 乒乓球 -->
                <LinearLayout
                    android:id="@+id/tab_spec_main_tabletennis"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_main_tabletennis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:text="乒乓球" />

                    <ImageView
                        android:id="@+id/img_main_tabletennis"
                        android:layout_width="30dp"
                        android:layout_height="6dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp" />

                </LinearLayout>
                <!-- 排球 -->
                <LinearLayout
                    android:id="@+id/tab_spec_main_volleyball"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_main_volleyball"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:text="排球" />

                    <ImageView
                        android:id="@+id/img_main_volleyball"
                        android:layout_width="30dp"
                        android:layout_height="6dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Fragment内容显示的帧布局 -->
            <FrameLayout
                android:id="@+id/tab_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/tab_widget1"
                android:layout_below="@+id/tab_widget" />

            <!-- 选项卡按钮所在布局 -->
            <LinearLayout
                android:id="@+id/tab_widget1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <!-- 首页 -->
                <LinearLayout
                    android:id="@+id/tab_spec_main_home"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_main_home"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/home2" />

                    <TextView
                        android:id="@+id/tv_main_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="首页"
                        android:textColor="#707070" />

                </LinearLayout>

                <!-- 比赛 -->
                <LinearLayout
                    android:id="@+id/tab_spec_main_game"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_main_game"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/game2" />

                    <TextView
                        android:id="@+id/tv_main_game"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="比赛"
                        android:textColor="#707070" />

                </LinearLayout>

                <!-- 约球 -->
                <LinearLayout
                    android:id="@+id/tab_spec_main_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_main_time"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/time2" />

                    <TextView
                        android:id="@+id/tv_main_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="约球"
                        android:textColor="#707070" />

                </LinearLayout>

                <!-- 消息 -->
                <LinearLayout
                    android:id="@+id/tab_spec_main_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_main_message"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/message2" />

                    <TextView
                        android:id="@+id/tv_main_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="消息"
                        android:textColor="#707070" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>