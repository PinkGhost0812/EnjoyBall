<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="70dp"
    android:background="@drawable/editround_background"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginLeft="25dp"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/tv_collectItem_heads"
                android:textSize="20sp"
                android:text="剑网三海量Q币大放送"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="25dp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/tv_collectItem_authors"
                android:text="始于初见"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_collectItem_times"
                android:layout_marginLeft="5dp"
                android:text="08-31"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/img_collectItem_imgs"
            android:src="@drawable/sword"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="25dp"
            android:layout_width="60dp"
            android:layout_height="50dp" />
    </LinearLayout>
</LinearLayout>