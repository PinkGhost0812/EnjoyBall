<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:minHeight="80dp">
    <ImageView
        android:id="@+id/iv_message_deal_head"
        android:layout_width="35dp"
        android:layout_height="match_parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/tv__message_sender"
        android:textColor="@color/colorPrimary"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="申请加入你开始于"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/tv__message_starttime"
        android:textColor="@color/colorPrimary"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="的约球"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/tv_message_team"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="同意"
        android:textColor="@color/colorPrimary"
        android:id="@+id/tv_message_agree"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="拒绝"
        android:textColor="@color/colorPrimary"
        android:id="@+id/tv_message_disagree"/>


</LinearLayout>