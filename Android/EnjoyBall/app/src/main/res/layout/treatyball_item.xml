<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="160dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/tv_treatyball_troops1"
            android:layout_marginLeft="17dp"
            android:textSize="14sp"
            android:text="XX"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_treatyball_score1"
            android:gravity="center"
            android:text="50"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:textSize="20sp"
            android:gravity="center"
            android:text="VS"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_treatyball_score2"
            android:gravity="center"
            android:text="47"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_treatyball_troops2"
            android:gravity="center_vertical|right"
            android:layout_marginRight="17dp"
            android:textSize="14sp"
            android:text="XX"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:gravity="center"
            android:text="时间:"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_treatyball_date"
            android:gravity="center"
            android:text="2019/11/8"
            android:layout_width="100dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_treatyball_time"
            android:gravity="center"
            android:text="14:00"
            android:layout_width="80dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:gravity="center"
            android:text="地点:"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_treatyball_place"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="河北师范大学篮球场"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:gravity="center"
            android:text="状态:"
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_treatyball_symbol"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="未完成"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:gravity="center"
            android:text="球类:"
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_treatyball_type"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="篮球"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>