<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#37E137"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_search_back"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:src="@drawable/paobu" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="11"
            android:gravity="center">

            <EditText
                android:id="@+id/et_search_search"
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:background="@drawable/et_main_white"
                android:gravity="center"
                android:hint="十院联赛"
                android:lines="1"
                android:textSize="16sp"  />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_search_search"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="2"
            android:src="@drawable/serch" />
    </LinearLayout>

    <!-- 选项卡按钮所在布局 -->

    <HorizontalScrollView
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:id="@+id/tab_search_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="#1afa29"
            android:orientation="horizontal">

            <!-- 全部 -->
            <LinearLayout
                android:id="@+id/tab_spec_search_topall"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_search_topall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="全部(99+)"
                    android:textColor="#8B8682"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/img_search_topall"
                    android:layout_width="30dp"
                    android:layout_height="6dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

            <!-- 足球 -->
            <LinearLayout
                android:id="@+id/tab_spec_search_football"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_search_football"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:textColor="#fff"
                    android:text="足球(99+)" />

                <ImageView
                    android:id="@+id/img_search_football"
                    android:layout_width="30dp"
                    android:layout_height="6dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

            <!-- 篮球 -->
            <LinearLayout
                android:id="@+id/tab_spec_search_basketball"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_search_basketball"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:text="篮球" />

                <ImageView
                    android:id="@+id/img_search_basketball"
                    android:layout_width="30dp"
                    android:layout_height="6dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

            <!-- 排球 -->
            <LinearLayout
                android:id="@+id/tab_spec_search_volleyball"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_search_volleyball"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:text="排球" />

                <ImageView
                    android:id="@+id/img_search_volleyball"
                    android:layout_width="30dp"
                    android:layout_height="6dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

            <!-- 羽毛球 -->
            <LinearLayout
                android:id="@+id/tab_spec_search_badminton"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_search_badminton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:text="羽毛球" />

                <ImageView
                    android:id="@+id/img_search_badminton"
                    android:layout_width="30dp"
                    android:layout_height="6dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp" />

            </LinearLayout>
            <!-- 乒乓球 -->
            <LinearLayout
                android:id="@+id/tab_spec_search_tabletennis"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_search_tabletennis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:text="乒乓球" />

                <ImageView
                    android:id="@+id/img_search_tabletennis"
                    android:layout_width="30dp"
                    android:layout_height="6dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/sr_search_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnableFooterFollowWhenLoadFinished="true"
        app:srlEnableScrollContentWhenLoaded="true">
        <com.scwang.smartrefresh.layout.header.BezierRadarHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ListView
            android:id="@+id/lv_search_news"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlClassicsSpinnerStyle="FixedBehind"/>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>